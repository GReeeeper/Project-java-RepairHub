package metier.services;

import dao.ShopDAO;
import lombok.RequiredArgsConstructor;
import metier.models.Shop;
import metier.models.User;

@RequiredArgsConstructor
public class ShopService {

    private final ShopDAO shopDAO;

    // Create a shop with a given name and owner
    public void createShop(String name, User owner) {
        Shop shop = new Shop(name, owner);
        shopDAO.addShop(shop);
    }

    // Get a shop by owner
    public Shop getShopByOwner(User owner) {
        return shopDAO.getShopByOwner(owner);
    }

    // Update shop cash
    public void updateCash(double amount, Shop shop) {
        shopDAO.updateCash(amount, shop);
    }

    // Optionally, get all shops
    public List<Shop> getAllShops() {
        return shopDAO.getAllShops();
    }
}
